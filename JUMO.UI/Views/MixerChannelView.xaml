<UserControl x:Class="JUMO.UI.Views.MixerChannelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:JUMO.UI.Views"
             xmlns:ctrl="clr-namespace:JUMO.UI.Controls"
             mc:Ignorable="d"
             d:DesignHeight="350"
             x:Name="root">
    <UserControl.Resources>
        <ResourceDictionary Source="../Resources/Skin.xaml" />
    </UserControl.Resources>
    <Grid Margin="3" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Margin="3" FontSize="12" Text="{Binding Name, FallbackValue=채널}" TextAlignment="Center"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="3">
            <ctrl:VolumeMeter Width="20" Amplitude="{Binding LeftVolume}" />
            <Rectangle Stroke="DarkGray" StrokeThickness="1"/>
            <ctrl:VolumeMeter Width="20" Amplitude="{Binding RightVolume}" />
        </StackPanel>
        <StackPanel Grid.Row="2">
            <CheckBox Margin="3" Content="Mute" IsChecked="{Binding IsMuted}">
                <CheckBox.InputBindings>
                    <MouseBinding Gesture="RightClick" Command="{Binding DataContext.Solo, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" CommandParameter="{Binding}"/>
                </CheckBox.InputBindings>
            </CheckBox>
            <Slider x:Name="Volume" Orientation="Vertical" Height="100" HorizontalAlignment="Center" Margin="3" Value="{Binding Volume}" Minimum="0.0" Maximum="1.0"/>
            <ctrl:Knob x:Name="Panning" Style="{StaticResource TracklessKnobStyle}" Value="{Binding Panning}" Minimum="-1.0" Maximum="1.0"/>
        </StackPanel>
    </Grid>
</UserControl>

