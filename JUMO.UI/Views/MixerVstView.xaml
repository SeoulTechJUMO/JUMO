<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JUMO.UI.Views"
             xmlns:Controls="clr-namespace:JUMO.UI.Controls" x:Class="JUMO.UI.Views.MixerVstView"
             mc:Ignorable="d">

    <Border BorderBrush="Gray" BorderThickness="1">
        <StackPanel Orientation="Horizontal" Margin="2">
            <StackPanel.InputBindings>
                <MouseBinding Gesture="LeftClick" Command="{Binding DataContext.OpenPluginEditorCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" CommandParameter="{Binding}"/>
            </StackPanel.InputBindings>
            <TextBlock Text="{Binding Name}" Width="160"/>
            <Slider Width="30" Minimum="0.0" Maximum="1.0" Value="{Binding EffectMix}" Margin="0,0,2,0"/>
            <Button Padding="1" Content="↑↓" FontSize="10" Margin="0,0,3,0"/>
            <StackPanel>
                <Button Content="▲" FontSize="6" Padding="5,1"/>
                <Button Content="▼" FontSize="6"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
