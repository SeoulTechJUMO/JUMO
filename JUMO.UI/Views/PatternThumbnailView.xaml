<UserControl x:Class="JUMO.UI.Views.PatternThumbnailView"
             x:Name="root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:JUMO.UI.Views"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="400">
    <Rectangle DataContext="{Binding ElementName=root}">
        <Rectangle.Fill>
            <VisualBrush x:Name="contentBrush" ViewboxUnits="Absolute">
                <VisualBrush.Visual>
                    <Path x:Name="thumbnailPath" Fill="{Binding Foreground}" SnapsToDevicePixels="False" />
                </VisualBrush.Visual>
            </VisualBrush>
        </Rectangle.Fill>
    </Rectangle>
</UserControl>
