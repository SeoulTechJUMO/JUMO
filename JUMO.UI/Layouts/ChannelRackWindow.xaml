<Window x:Class="JUMO.UI.Layouts.ChannelRackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JUMO.UI.Layouts"
        xmlns:ctrl="clr-namespace:JUMO.UI.Controls"
        mc:Ignorable="d"
        Title="ChannelRack" Height="450" Width="400">
    <Grid Margin="5">
        <StackPanel>
            <Grid Margin="0,5">
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <CheckBox Margin="5,0" VerticalAlignment="Center" />
                <ctrl:NumericUpDown Grid.Column="1" Width="50" Margin="5,0" />
                <Button Grid.Column="2" Content="VstPlugin1" Padding="8,3" Width="100" Margin="5,0" />
                <Rectangle Grid.Column="3" Stroke="Black" StrokeThickness="1" SnapsToDevicePixels="True" Margin="5,0" />
            </Grid>
        </StackPanel>
    </Grid>
</Window>
