<Window x:Class="JUMO.UI.Layouts.PianoRollWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JUMO.UI.Layouts"
        xmlns:ctrl="clr-namespace:JUMO.UI.Controls"
        xmlns:test="clr-namespace:JUMO.UI"
        mc:Ignorable="d"
        Title="PianoRollWindow" Height="450" Width="800">
    <Window.DataContext>
        <test:PrototypePianoRollViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Label Content="Numerator" />
            <ctrl:NumericUpDown x:Name="NumeratorControl" MinValue="1" MaxValue="64" Delta="1" Value="{Binding Numerator, Mode=TwoWay}" />
            <Label Content="Denominator" />
            <ctrl:NumericUpDown x:Name="DenominatorControl" MinValue="2" MaxValue="64" Delta="2" Value="{Binding Denominator, Mode=TwoWay}" />
            <Label Content="GridUnit" />
            <ctrl:NumericUpDown x:Name="GridUnitControl" MinValue="1" MaxValue="64" Delta="1" Value="{Binding GridUnit, Mode=TwoWay}" />
            <Label Content="ZoomFactor" />
            <ctrl:NumericUpDown x:Name="ZoomFactorControl" MinValue="1" MaxValue="96" Delta="1" Value="{Binding ZoomFactor, Mode=TwoWay}" />
            <Label Content="PPQN:" />
            <Label Content="{Binding TimeResolution}" />
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <ScrollViewer x:Name="KeyScrollViewer" Grid.Row="1" Grid.Column="0" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden" ScrollChanged="OnScrollChanged">
                <ctrl:PianoRollKeyboard />
            </ScrollViewer>
            <ItemsControl Grid.Row="1" Grid.Column="1" ItemsSource="{Binding Notes}">
                <ItemsControl.Template>
                    <ControlTemplate>
                        <ScrollViewer CanContentScroll="True"
                                      HorizontalScrollBarVisibility="Visible"
                                      VerticalScrollBarVisibility="Visible">
                            <ScrollViewer.Background>
                                <VisualBrush Viewport="{Binding ContentBoundary, ElementName=MusicalGrid}"
                                             Viewbox="{Binding ContentBoundary, ElementName=MusicalGrid}"
                                             ViewportUnits="Absolute"
                                             ViewboxUnits="Absolute"
                                             TileMode="Tile">
                                    <VisualBrush.Visual>
                                        <ctrl:MusicalGrid x:Name="MusicalGrid"
                                                          Numerator="{Binding Numerator}"
                                                          Denominator="{Binding Denominator}"
                                                          TimeResolution="{Binding TimeResolution}"
                                                          ZoomFactor="{Binding ZoomFactor}"
                                                          GridUnit="{Binding GridUnit}"
                                                          GridHeight="20.0" />
                                    </VisualBrush.Visual>
                                    <VisualBrush.Transform>
                                        <TransformGroup>
                                            <TranslateTransform
                                                X="{Binding HorizontalOffset, RelativeSource={RelativeSource FindAncestor, AncestorType=ScrollViewer}}"
                                                Y="{Binding VerticalOffset, RelativeSource={RelativeSource FindAncestor, AncestorType=ScrollViewer}}" />
                                            <MatrixTransform Matrix="-1 0 0 -1 1 1" />
                                        </TransformGroup>
                                    </VisualBrush.Transform>
                                </VisualBrush>
                            </ScrollViewer.Background>
                            <ItemsPresenter />
                        </ScrollViewer>
                    </ControlTemplate>
                </ItemsControl.Template>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ctrl:MusicalCanvas TimeResolution="{Binding TimeResolution}"
                                            ZoomFactor="{Binding ZoomFactor}"
                                            GridUnit="{Binding GridUnit}"
                                            VirtualizingPanel.IsVirtualizing="False" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                        <Setter Property="ctrl:MusicalCanvas.NoteValue" Value="{Binding Value}" />
                        <Setter Property="ctrl:MusicalCanvas.Start" Value="{Binding Start}" />
                        <Setter Property="ctrl:MusicalCanvas.Length" Value="{Binding Length}" />
                    </Style>
                </ItemsControl.ItemContainerStyle>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding Value}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>
</Window>
