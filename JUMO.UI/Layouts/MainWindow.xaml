<Window x:Class="JUMO.UI.Layouts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JUMO.UI.Layouts"
        xmlns:proj="clr-namespace:JUMO.UI"
        xmlns:view="clr-namespace:JUMO.UI.Views"
        mc:Ignorable="d"
        Title="{Binding DisplayName}" Height="600" Width="900">
    <Window.DataContext>
        <proj:MainViewModel />
    </Window.DataContext>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="파일(F)">
                <MenuItem Header="저장" />
                <MenuItem Header="열기" />
                <MenuItem Header="설정" Click="MenuItem_Click" />
            </MenuItem>
            <MenuItem Header=" 편집(E)" />
            <MenuItem Header=" 보기(V)" />
            <MenuItem Header=" 도구(T)" />
            <MenuItem Header=" 도움말(H)" />
        </Menu>
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <ComboBox IsEditable="True" Width="45">
                    <ComboBoxItem>100</ComboBoxItem>
                    <ComboBoxItem>120</ComboBoxItem>
                    <ComboBoxItem>140</ComboBoxItem>
                </ComboBox>
                <TextBox Margin="5,0,5,0" Width="250" />
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <ContentControl Grid.RowSpan="2">
                        <ContentControl.ContentTemplate>
                            <DataTemplate DataType="{x:Type proj:PlaybackTimeViewModel}">
                                <view:PlaybackTimeView />
                            </DataTemplate>
                        </ContentControl.ContentTemplate>
                        <proj:PlaybackTimeViewModel />
                    </ContentControl>
                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,3" Orientation="Horizontal">
                        <ToggleButton Margin="2,0" Padding="5,0" Command="{Binding TogglePlaybackModeCommand}">
                            <ToggleButton.Style>
                                <Style TargetType="ToggleButton">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Sequencer.Mode}" Value="Pattern">
                                            <Setter Property="Content" Value="패턴" />
                                            <Setter Property="IsChecked" Value="True" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Sequencer.Mode}" Value="Song">
                                            <Setter Property="Content" Value="곡" />
                                            <Setter Property="IsChecked" Value="False" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>
                        <ToggleButton Content="▶" Margin="2,0" Padding="5,0" IsChecked="{Binding Sequencer.IsPlaying, Mode=OneWay}" Command="{Binding TogglePlaybackCommand}" />
                    </StackPanel>
                    <Slider Grid.Row="1" Grid.Column="1" Width="200" Minimum="0" Value="{Binding Sequencer.Position, Mode=TwoWay}">
                        <Slider.Style>
                            <Style TargetType="Slider">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Sequencer.Mode}" Value="Pattern">
                                        <Setter Property="Maximum" Value="{Binding Song.CurrentPattern.Length}" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Sequencer.Mode}" Value="Song">
                                        <Setter Property="Maximum" Value="{Binding Song.Length}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Slider.Style>
                    </Slider>
                </Grid>
                <ComboBox Width="100">
                    <ComboBoxItem>패턴1</ComboBoxItem>
                    <ComboBoxItem>패턴2</ComboBoxItem>
                    <ComboBoxItem>패턴3</ComboBoxItem>
                </ComboBox>
                <Button Background="Gray" Width="30" Height="20" Margin="3,0" BorderBrush="Gray" Content="MX" Click="Mixer_Click"/>
                <Button Background="Gray" Width="30" Height="20" Margin="3,0" BorderBrush="Gray" Content="PL" Command="{Binding OpenPlaylistCommand}" />
            </ToolBar>
        </ToolBarTray>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem>
                <TextBlock Text="준비" />
            </StatusBarItem>
            <StatusBarItem Grid.Column="1">
                <TextBlock Text="176MB" />
            </StatusBarItem>
            <Separator Grid.Column="2" />
            <StatusBarItem Grid.Column="3">
                <TextBlock Text="0:00.000" />
            </StatusBarItem>
            <StatusBarItem Grid.Column="4">
                <TextBlock Text="4:33.273" />
            </StatusBarItem>
            <Separator Grid.Column="5" />
            <StatusBarItem Grid.Column="6">
                <ProgressBar Width="100" Height="{x:Static SystemParameters.MenuBarHeight}" />
            </StatusBarItem>
        </StatusBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" MinWidth="300" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="443*" />
                <ColumnDefinition Width="148*"/>
            </Grid.ColumnDefinitions>

            <TabControl Grid.Column="0" Margin="0,0,0,0.4">
                <TabItem Header="패턴">
                    <proj:ChannelRackViewModel />
                </TabItem>
            </TabControl>
            <GridSplitter Grid.Column="1" Width="3" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="{x:Static SystemColors.ControlBrush}" ShowsPreview="True" Margin="0,0,0.2,0.4" />
            <TabControl Grid.Column="1" ItemsSource="{Binding Workspaces}" SelectedItem="{Binding CurrentWorkspace, Mode=TwoWay}" Grid.ColumnSpan="3" Margin="3,0,-0.4,0.4">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <DockPanel>
                            <Button DockPanel.Dock="Right" Content="X" Margin="5,0,0,0" Command="{Binding CloseCommand}" />
                            <TextBlock Text="{Binding DisplayName}" />
                        </DockPanel>
                    </DataTemplate>
                </TabControl.ItemTemplate>
            </TabControl>
        </Grid>
    </DockPanel>
</Window>
