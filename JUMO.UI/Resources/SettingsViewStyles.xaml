<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Styles for the Settings Window -->

    <Style x:Key="SettingsItem" TargetType="FrameworkElement">
        <Setter Property="Margin" Value="0,0,0,5" />
    </Style>

    <Style x:Key="SettingsItemHeader" TargetType="Label" BasedOn="{StaticResource SettingsItem}">
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style x:Key="SettingsItemHelpText" TargetType="TextBlock" BasedOn="{StaticResource SettingsItem}">
        <Setter Property="FontSize" Value="11" />
        <Setter Property="Opacity" Value="0.8" />
        <Setter Property="TextWrapping" Value="WrapWithOverflow" />
    </Style>

    <Style x:Key="SettingsItemSeparator" TargetType="Separator" BasedOn="{StaticResource SettingsItem}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Rectangle />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Margin" Value="0" />
        <Setter Property="Height" Value="15" />
    </Style>
</ResourceDictionary>